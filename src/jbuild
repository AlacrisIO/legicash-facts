;; jbuilder (dune) file for Legicash sources

(jbuild_version 1)

;; library, which includes inline tests 
(library
 ((name legicash)
  (modules (legibase lib data256 keypairs main_chain side_chain uInt64))
  (preprocess (pps (ppx_deriving.std ppx_inline_test)))
  (libraries (cryptokit secp256k1))
  (inline_tests)))

;; main executable
(executable
  ((name hello_legicash)
    (preprocess (pps (ppx_deriving.std ppx_inline_test)))
    (modules (hello_legicash))
    (libraries (legicash))))
