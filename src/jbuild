;; jbuilder (dune) file for Legicash sources

(jbuild_version 1)

(library
 ((name legicash_lib)
  (modules (legibase lib data256 keypairs uInt64 ethereum_rlp ethereum_patricia_merkle
  main_chain side_chain main_chain_action side_chain_action))
  (preprocess (pps (ppx_deriving.std ppx_inline_test ppx_deriving_lens)))
  (libraries (cryptokit secp256k1 lens))
  (inline_tests)))

;; main executable
(executable
  ((name hello_legicash)
   (preprocess (pps (ppx_deriving.std ppx_deriving_lens ppx_inline_test)))
   (modules (hello_legicash))
   (libraries (legicash_lib))))
